<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_deep"
    android:gravity="right"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="-11dp"
        app:cardCornerRadius="15dp"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/quiz_imageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="right"
        android:background="@color/white_deep"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_quiz_title"
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:breakStrategy="high_quality"
            android:textSize="@dimen/font_header_2"
            android:textColor="@color/noti_bar"
            android:layout_height="wrap_content"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_deep">

            <RadioGroup

                android:id="@+id/quiz_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white_deep"
                android:padding="8dp"
                >




                <RadioButton
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_radio_btn1"
                    tools:text="@string/lorem"
                    android:breakStrategy="balanced"
                    android:textColor="@color/textColors"
                    android:textSize="@dimen/bodyText"
                    android:background="@drawable/radio_btn_shape"
                    android:elevation="4dp"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    android:buttonTint="@color/textColors"/>


                <RadioButton
                    android:breakStrategy="balanced"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_radio_btn2"
                    tools:text="یبلیبلایبالتیبالیالیب"
                    android:textColor="@color/textColors"
                    android:textSize="@dimen/bodyText"
                    android:background="@drawable/radio_btn_shape"
                    android:elevation="4dp"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    android:buttonTint="@color/textColors"/>

                <RadioButton
                    android:breakStrategy="balanced"
                    android:buttonTint="@color/textColors"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_radio_btn3"
                    tools:text="what the hellllll dudeeeeeee :DDDDDDDDD"
                    android:textColor="@color/textColors"
                    android:textSize="@dimen/bodyText"
                    android:background="@drawable/radio_btn_shape"
                    android:elevation="4dp"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"/>

                <RadioButton
                    android:breakStrategy="balanced"
                    android:buttonTint="@color/textColors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/quiz_radio_btn4"
                    tools:text="what the hellllll dudeeeeeee :DDDDDDDDD"
                    android:textColor="@color/textColors"
                    android:textSize="@dimen/bodyText"
                    android:background="@drawable/radio_btn_shape"
                    android:elevation="4dp"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"/>




            </RadioGroup>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>








</LinearLayout>