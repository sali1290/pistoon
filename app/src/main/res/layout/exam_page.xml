<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="-11dp"
        app:cardCornerRadius="15dp"
        android:layout_height="@dimen/_185sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/testImageView"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/image1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:id="@+id/quizTestTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:breakStrategy="high_quality"
            android:text="hello"
            android:textColor="@color/noti_bar"
            android:textDirection="rtl"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/test_bookmark"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/test_bookmark"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_shape"
            android:drawableEnd="@drawable/toggle_btn_state"
            android:padding="3dp"
            android:textColor="@color/white_deep"
            android:textOff="@string/Add_txt"
            android:textOn="@string/Delete_txt"
            android:textSize="@dimen/_8ssp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </ToggleButton>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/test_cardview_parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/test_cardview1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                android:background="@color/white_deep"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/txt_text_answer1"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:textDirection="rtl"
                        android:layout_margin="8dp"
                        android:textColor="@color/textColor_deep_blue"
                        android:layout_height="wrap_content"
                        tools:text="این متن تست است و جای جواب وسال ها ققرار می گیرد"
                        android:padding="@dimen/_4sdp"/>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="@dimen/_14ssp"/>







                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/test_cardview2"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:background="@color/white_deep"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/txt_text_answer2"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_margin="8dp"
                        android:textDirection="rtl"
                        android:textColor="@color/textColor_deep_blue"
                        android:layout_height="wrap_content"
                        tools:text="این متن تست است و جای جواب وسال ها ققرار می گیرد"
                        android:padding="@dimen/_4sdp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:text="2"/>




                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/test_cardview3"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:background="@color/white_deep"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/txt_text_answer3"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_margin="8dp"
                        android:textDirection="rtl"
                        android:textColor="@color/textColor_deep_blue"
                        android:layout_height="wrap_content"
                        tools:text="این متن تست است و جای جواب وسال ها ققرار می گیرد"
                        android:padding="@dimen/_4sdp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="@dimen/_14ssp"/>





                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:id="@+id/test_cardview4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:background="@color/white_deep"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/txt_text_answer4"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_margin="8dp"
                        android:textDirection="rtl"
                        android:textColor="@color/textColor_deep_blue"
                        android:layout_height="wrap_content"
                        tools:text="این متن تست است و جای جواب وسال ها ققرار می گیرد"
                        android:padding="@dimen/_4sdp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="@dimen/_14ssp"/>




                </LinearLayout>




            </androidx.cardview.widget.CardView>








        </LinearLayout>



    </androidx.core.widget.NestedScrollView>



</LinearLayout>